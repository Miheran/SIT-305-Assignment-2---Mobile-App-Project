<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <VideoView
        android:id="@+id/openVideo"
        android:layout_width="match_parent"
        android:layout_height="354dp"
        android:layout_centerVertical="true" />

    <Button
        android:id="@+id/homebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="19dp"
        android:onClick="homeSection"
        android:text="Home" />

    <Button
        android:id="@+id/runbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="39dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="15dp"
        android:onClick="runSection"
        android:text="Run" />

    <Button
        android:id="@+id/videobtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="39dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="15dp"
        android:onClick="videoSection"
        android:visibility="invisible"
        tools:visibility="visible"
        android:text="Video" />

    <Chronometer
        android:id="@+id/runtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="152dp"
        android:layout_marginStart="152dp"
        android:layout_marginTop="149dp"
        android:visibility="invisible"
        tools:visibility="visible"
        android:onClick="onStartService"
        android:textSize="32sp" />

    <Button
        android:id="@+id/runstart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="160dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="85dp"
        android:visibility="invisible"
        tools:visibility="visible"
        android:onClick="onStartService"
        android:text="Start" />

    <ImageView
        android:id="@+id/dogImg"
        android:src="@drawable/run1"
        android:layout_width="200dp"
        android:layout_height="175dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp"
        android:layout_marginLeft="100dp"
        android:layout_marginStart="100dp"
        android:visibility="invisible"
        tools:visibility="visible" />

    <Button
        android:id="@+id/sleep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="51dp"
        android:layout_marginLeft="44dp"
        android:layout_marginRight="44dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="69dp"
        android:text="Sleep" />

    <FrameLayout
        android:id="@+id/fragmentLO"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>


</RelativeLayout>